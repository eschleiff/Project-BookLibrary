extends layout

block content 
    h1= title

    ul
        - let bookUrl = bookList.url;
        //- bookList.sort((a, b) => {let textA = a.title.toUpperCase(); let textB = b.title.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        each book in bookList
            li
                a(href=bookUrl)  #{book.title}
                |  (#{book.author}) #{book.url}
        else 
            li There are no books. 