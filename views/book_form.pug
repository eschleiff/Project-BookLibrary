extends layout

block content
    h1= title 

    form(action="" method="POST")
        .form-group
            label(for='title') Title:
            input#title.form-control(type="text", placeholder='Name of book' name="title" required='true' value=(undefined===book ? '' : book.title) )
        .form-group
            label(for='author') Author:
            input#author.form-control(type="text", placeholder='Name of author' name='author' required='true' value=(undefined===book ? '' : book.author) )
        .form-group
            label(for='summary') Summary:
            textarea#summary.form-control(type='textarea', placeholder='Summary' name='summary' required='true') #{undefined===book ? '' : book.summary}
        .form-group
            label(for='pagesRead') Pages Read:
            input#pagesRead.form-control(type="number", placeholder='Pages Read' name='pagesRead' value=(undefined===book ? '' : book.pagesRead) )
        //- .form-group 
        //-     input.checkbox-input(type='checkbox', name='read', id=book.read, value=book.read, checked='True' )
        button.btn.btn-primary(type="submit") Submit 

    if errors 
        ul 
            for error in errors 
                li!= error.msg 